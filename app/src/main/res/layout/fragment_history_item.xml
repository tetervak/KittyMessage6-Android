<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="envelope"
            type="ca.tetervak.kittymessage6.database.Envelope" />
    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/gap1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/gap1"
            android:textAppearance="?attr/textAppearanceListItem"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/urgent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/gap1"
            android:text="@{envelope.urgent ? @string/urgent: @string/not_urgent}"
            android:textAppearance="?attr/textAppearanceListItem" />

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/gap0"
            android:text="@{envelope.textMessage}"
            android:textAppearance="?attr/textAppearanceListItem"
            tools:ignore="RtlHardcoded" />

    </LinearLayout>
</layout>