<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="ca.tetervak.kittymessage6.database.Envelope"/>
        <import type="ca.tetervak.kittymessage6.util.DateTimeStamp"/>
        <variable
            name="envelope"
            type="Envelope" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceListItem"
            android:layout_marginTop="@dimen/margin"
            android:layout_marginStart="@dimen/double_margin"
            android:layout_marginBottom="@dimen/margin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="3." />

        <TextView
            android:id="@+id/urgent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin"
            android:text="@{envelope.urgent ? @string/urgent: @string/not_urgent}"
            android:textAppearance="?attr/textAppearanceListItem"
            app:layout_constraintBaseline_toBaselineOf="@id/count"
            app:layout_constraintStart_toEndOf="@id/count"
            tools:text="@string/urgent" />

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/small_margin"
            android:text="@{@stringArray/cat_messages[envelope.catMessage.ordinal]}"
            android:textAppearance="?attr/textAppearanceListItem"
            app:layout_constraintBaseline_toBaselineOf="@id/urgent"
            app:layout_constraintStart_toEndOf="@id/urgent"
            tools:text="@string/cat_mew" />

        <TextView
            android:id="@+id/date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_marginBottom="@dimen/margin"
            android:text="@{DateTimeStamp.formatDateTime(envelope.date)}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/urgent"
            app:layout_constraintTop_toBottomOf="@id/urgent"
            tools:text="Mon, Oct 12, 2020 - 4:14 PM" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>