<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/inputFragment">
    <fragment
        android:id="@+id/inputFragment"
        android:name="ca.tetervak.kittymessage6.ui.input.InputFragment"
        android:label="@string/input_fragment_label"
        tools:layout="@layout/fragment_input">
        <action
            android:id="@+id/action_input_to_output"
            app:destination="@id/outputFragment" />
    </fragment>
    <fragment
        android:id="@+id/outputFragment"
        android:name="ca.tetervak.kittymessage6.ui.output.OutputFragment"
        android:label="@string/output_fragment_label"
        tools:layout="@layout/fragment_output">
        <argument
            android:name="envelopeId"
            app:argType="long" />
        <action
            android:id="@+id/action_output_to_input"
            app:destination="@id/inputFragment"
            app:popUpTo="@id/inputFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/historyFragment"
        android:name="ca.tetervak.kittymessage6.ui.history.HistoryFragment"
        android:label="@string/history_fragment_label"
        tools:layout="@layout/fragment_history" >
        <action
            android:id="@+id/action_history_to_output"
            app:destination="@id/outputFragment" />
    </fragment>
    <action
        android:id="@+id/action_global_to_history"
        app:destination="@id/historyFragment"
        app:popUpTo="@id/inputFragment"
        app:popUpToInclusive="false" />
    <dialog
        android:id="@+id/about_dialog"
        android:name="ca.tetervak.kittymessage6.ui.dialogs.AboutFragment"
        android:label="AboutFragment" />
</navigation>