<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/inputFragment">
    <fragment
        android:id="@+id/inputFragment"
        android:name="ca.tetervak.kittymessage6.ui.input.InputFragment"
        android:label="input_fragment"
        tools:layout="@layout/input_fragment" >
        <action
            android:id="@+id/action_input_to_output"
            app:destination="@id/outputFragment" />
    </fragment>
    <fragment
        android:id="@+id/outputFragment"
        android:name="ca.tetervak.kittymessage6.ui.output.OutputFragment"
        android:label="output_fragment"
        tools:layout="@layout/output_fragment" >
        <argument
            android:name="envelopeKey"
            app:argType="long" />
    </fragment>
</navigation>